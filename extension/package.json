{
  "name": "altools",
  "displayName": "ALTools",
  "description": "Business Central AL tools, like code generators and transformers",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "altools.openApiGenerate",
        "title": "OpenAPI: Generate",
        "category": "ALTools"
      },
      {
        "command": "altools.xmlGenerate",
        "title": "XML: Generate",
        "category": "ALTools"
      },
      {
        "command": "altools.workspaceInit",
        "title": "Initialize Workspace",
        "category": "ALTools"
      },
      {
        "command": "altools.workspaceOpen",
        "title": "Open Workspace",
        "category": "ALTools"
      }
    ]
  },
  "repository": "github:tfaller/altools",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.25",
    "@types/vscode": "^1.106.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.12",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  },
  "extensionDependencies": [
    "ms-dynamics-smb.al",
    "vscode.git"
  ]
}